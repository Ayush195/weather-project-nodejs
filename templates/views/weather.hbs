<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    {{>navbar}}
    <!-- main header  -->
    <div class="container-fluid main_menu">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tursday</p>
                        <p id="today_date">27-05-2021</p>
                    </div>
                    <div class="main_layer ">
                        <p id="city_name">output</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!----------------------------------footer code--------------------->
    {{>footer}}
    <script src="js/main.js"></script>
    <script>

        const getCurrentDay = () => {
            var weekDay = new Array(7);
            weekDay[0] = "Sun";
            weekDay[1] = "Mon";
            weekDay[2] = "Tue";
            weekDay[3] = "Wed";
            weekDay[4] = "Thu";
            weekDay[5] = "Fri";
            weekDay[6] = "Sat";
            let currentTime = new Date();
            let days = weekDay[currentTime.getDay()];
            let day = document.getElementById('day')
            day.innerText = days;
        };
        getCurrentDay();
    </script>
    <script>
        let today_date = document.getElementById('today_date')
        const getCurrentTime = () => {
            var today = new Date();

            var date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();

            var time = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();

            var dateTime = date + ' ' + time;
            today_date.innerText = dateTime;
            setInterval(getCurrentTime, 1000);

        };
        getCurrentTime();

    </script>
</body>

</html>